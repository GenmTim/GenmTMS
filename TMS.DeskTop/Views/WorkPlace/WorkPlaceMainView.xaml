                        <uc:SettingItemBox
                            Title="人事管理"
                            Margin="0,0,20,20"
                            Style="{StaticResource CustomTitleSettingItemBoxStyle}">
                            <WrapPanel Margin="20,0,0,0" Orientation="Horizontal">
                                <Button
