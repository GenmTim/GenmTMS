        <hc:SimplePanel Grid.Column="1"
            Background="White"
            DragOver="OnDragOver"
            DragLeave="OnDragLeave"
            DragEnter="OnDragEnter"
            Drop="OnDrop"
            AllowDrop="True">
            <control:FileListControl Margin="0,25,0,0" />
            <popup:UploadInfoPopup
                Margin="0,0,20,20"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom" />
            <hc:SimplePanel x:Name="fileDragMask"
                Opacity="0"
                Visibility="Collapsed">
                <hc:SimplePanel.Style>
                    <Style TargetType="hc:SimplePanel">
                        <Style.Triggers>
                            <Trigger Property="Visibility" Value="Visible">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="Opacity"
                                                To="1"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="Opacity"
                                                To="0"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </hc:SimplePanel.Style>
