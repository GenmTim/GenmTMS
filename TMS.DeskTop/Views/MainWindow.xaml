<Window
    x:Class="TMS.DeskTop.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:data="clr-namespace:TMS.Core.Data;assembly=TMS.Core"
    Width="1500"
    Height="900"
    prism:ViewModelLocator.AutoWireViewModel="True"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary Source="/Resources/Styles/Views/MainWindowStyle.xaml" />
    </Window.Resources>
    <Border Background="Transparent">
        <Border
            Background="#FF37A0EA"
            BorderThickness="0"
            CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Rectangle
                    Grid.ColumnSpan="2"
                    Height="30"
                    VerticalAlignment="Top"
                    Panel.ZIndex="100"
                    hc:WindowAttach.IsDragElement="True"
                    Fill="Transparent"
                    MouseDown="TopBar_MouseDown"
                    RadiusX="10"
                    RadiusY="10" />
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Button Style="{DynamicResource profileBtnStyle}">
                        <Button.Content>
                            <Image Source="/Resources/Images/Assets/googledrive.png" />
                        </Button.Content>
                    </Button>

                    <!--#region Left Grid - Menu-->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="300" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="20" />
                        </Grid.RowDefinitions>
                        <UniformGrid Columns="1">
                            <!--  Adding Menu buttons  -->
                            <RadioButton Style="{StaticResource menuRadioButtonTemplate}" Tag="Tag3">
                                <hc:Poptip.Instance>
                                    <hc:Poptip Style="{StaticResource BlockPopTip}">
                                        <hc:Poptip.Content>
                                            <TextBlock Text="通知" Margin="3" />
                                        </hc:Poptip.Content>
                                    </hc:Poptip>
                                </hc:Poptip.Instance>
                                <RadioButton.Content>
                                    <Image
                                        Width="24"
                                        Source="/Resources/Images/Assets/sms.png"
                                        Stretch="Uniform" />
                                </RadioButton.Content>
                            </RadioButton>
                            <RadioButton Style="{StaticResource menuRadioButtonTemplate}" Tag="Contacts">
                                <hc:Poptip.Instance>
                                    <hc:Poptip Style="{StaticResource BlockPopTip}">
                                        <hc:Poptip.Content>
                                            <TextBlock Text="联系" Margin="3" />
                                        </hc:Poptip.Content>
                                    </hc:Poptip>
                                </hc:Poptip.Instance>
                                <RadioButton.Content>
                                    <Image
                                        Width="24"
                                        Source="/Resources/Images/Assets/contacts.png"
                                        Stretch="Uniform" />
                                </RadioButton.Content>
                            </RadioButton>

                            <RadioButton
                                Command="{Binding NavigationCommand}"
                                CommandParameter="WorkPlaceView"
                                Style="{StaticResource menuRadioButtonTemplate}"
                                Tag="Tag3">
                                <hc:Poptip.Instance>
                                    <hc:Poptip Style="{StaticResource BlockPopTip}">
                                        <hc:Poptip.Content>
                                            <TextBlock Text="多应用" Margin="3" />
                                        </hc:Poptip.Content>
                                    </hc:Poptip>
                                </hc:Poptip.Instance>
                                <RadioButton.Content>
                                    <Image
                                        Width="24"
                                        Source="/Resources/Images/Assets/mmc.png"
                                        Stretch="Uniform" />
                                </RadioButton.Content>
                            </RadioButton>
                            <RadioButton Style="{StaticResource menuRadioButtonTemplate}" Tag="Tag3">
                                <hc:Poptip.Instance>
                                    <hc:Poptip Style="{StaticResource BlockPopTip}">
                                        <hc:Poptip.Content>
                                            <TextBlock Text="成就" Margin="3" />
                                        </hc:Poptip.Content>
                                    </hc:Poptip>
                                </hc:Poptip.Instance>
                                <RadioButton.Content>
                                    <Image
                                        Width="24"
                                        Source="/Resources/Images/Assets/new_custom48.png"
                                        Stretch="Uniform" />
                                </RadioButton.Content>
                            </RadioButton>
                            <RadioButton Style="{StaticResource menuRadioButtonTemplate}" Tag="Application">
                                <hc:Poptip.Instance>
                                    <hc:Poptip Style="{StaticResource BlockPopTip}">
                                        <hc:Poptip.Content>
                                            <TextBlock Text="设置" Margin="3" />
                                        </hc:Poptip.Content>
                                    </hc:Poptip>
                                </hc:Poptip.Instance>
                                <RadioButton.Content>
                                    <Image
                                        Width="24"
                                        Source="/Resources/Images/Assets/settings.png"
                                        Stretch="Uniform" />
                                </RadioButton.Content>
                            </RadioButton>
                        </UniformGrid>
                        <Button Grid.Row="2"
                            Background="Transparent"
                            BorderThickness="0"
                            Style="{DynamicResource menuButtonTemplate}">
                            <Button.Content>
                                <Image
                                    Width="24"
                                    Source="/Resources/Images/Assets/cloud.png"
                                    Stretch="Uniform" />
                            </Button.Content>
                        </Button>
                    </Grid>
                    <!--#endregion-->
                </Grid>
                <ContentControl Grid.Column="1" prism:RegionManager.RegionName="{x:Static Member=data:RegionToken.MainContent}" />
            </Grid>
        </Border>
    </Border>
</Window>
