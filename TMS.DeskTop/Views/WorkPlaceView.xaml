<UserControl
    x:Class="TMS.DeskTop.Views.WorkPlaceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:data="clr-namespace:TMS.Core.Data;assembly=TMS.Core"
    xmlns:page="clr-namespace:TMS.DeskTop.Views.WorkPlace"
    d:DesignHeight="900"
    d:DesignWidth="1440"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/Views/WorkPlaceViewStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="tabItemTemplate">
                <StackPanel Orientation="Horizontal">
                    <Border
                        Width="18"
                        Height="18"
                        Margin="5,0,8,0"
                        VerticalAlignment="Center"
                        Background="{StaticResource PrimaryBrush}"
                        CornerRadius="5">
                        <TextBlock
                            Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type hc:TabItem}}, Path=DataContext.DataContext.TabItemInfo.IconFont}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="/Resources/Fonts/#iconfont"
                            FontSize="10"
                            Foreground="White" />
                    </Border>
                    <TextBlock Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type hc:TabItem}}, Path=DataContext.DataContext.TabItemInfo.Title}" VerticalAlignment="Center" />
                </StackPanel>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Background="Transparent">
        <Border
            Background="#FFEFF0F1"
            BorderThickness="0"
            CornerRadius="10">
            <Grid>
                <hc:Interaction.Triggers>
                    <hc:RoutedEventTrigger RoutedEvent="hc:TabItem.Closed">
                        <hc:EventToCommand Command="{Binding TabClosedCommand}" PassEventArgsToCommand="True" />
                    </hc:RoutedEventTrigger>
                </hc:Interaction.Triggers>
                <hc:TabControl x:Name="tabControl"
                    Margin="0,30,0,0"
                    prism:RegionManager.RegionName="{x:Static Member=data:RegionToken.WorkPlaceTabContent}"
                    BorderThickness="0"
                    IsAnimationEnabled="True"
                    ItemTemplate="{StaticResource tabItemTemplate}"
                    ItemContainerStyle="{StaticResource tabItemStyle}"
                    IsTabFillEnabled="False">
                    <hc:TabItem ShowCloseButton="False">
                        <hc:TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Border
                                    Width="18"
                                    Height="18"
                                    Margin="5,0,8,0"
                                    VerticalAlignment="Center"
                                    Background="{StaticResource PrimaryBrush}"
                                    CornerRadius="5">
                                    <TextBlock
                                        Text="&#xe6ef;"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="/Resources/Fonts/#iconfont"
                                        FontSize="14"
                                        Foreground="White" />
                                </Border>
                                <TextBlock Text="工作台" VerticalAlignment="Center" />
                            </StackPanel>
                        </hc:TabItem.Header>
                        <page:WorkPlaceMainView />
                    </hc:TabItem>
                </hc:TabControl>
            </Grid>
        </Border>
    </Border>
</UserControl>
