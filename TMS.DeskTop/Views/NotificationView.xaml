                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>
                                <hc:SimplePanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
