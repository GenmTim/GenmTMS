<UserControl
    x:Class="TMS.DeskTop.Views.NotificationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:uc="clr-namespace:TMS.DeskTop.UserControls.Views"
    prism:ViewModelLocator.AutoWireViewModel="True"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/Views/NotificationViewStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style
                x:Key="addBtnStyle"
                BasedOn="{StaticResource ButtonCustom}"
                TargetType="Button">
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
                <Setter Property="Foreground" Value="#8b8f96" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Border x:Name="border"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                Style="{StaticResource BorderCircular}"
                                BorderThickness="1"
                                BorderBrush="{TemplateBinding BorderBrush}">
                                <TextBlock
                                    Text="&#xe773;"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="{TemplateBinding Foreground}"
                                    FontSize="20"
                                    Style="{StaticResource FIconTextPlusBlockStyle}" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}" />
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>

    </UserControl.Resources>
    <Border Grid.Column="1" Background="Transparent">
        <Border Background="White" CornerRadius="0">
            <Grid x:Name="main">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="272" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="1"
                    BorderBrush="{StaticResource TMS_BorderBrush}"
                    BorderThickness="0,0,1,0" />
                <Grid Grid.Column="0"
                    Margin="0,15,0,5"
                    Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="8,0,12,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <hc:SearchBar
                            Height="30"
                            Padding="15,0,0,0"
                            hc:BorderElement.CornerRadius="15"
                            hc:InfoElement.Placeholder="搜索"
                            FontSize="14"
                            Style="{StaticResource SearchBarExtend}" />
                        <Button Grid.Column="1"
                            Width="33"
                            Height="33"
                            Margin="10,0,0,0"
                            Style="{StaticResource addBtnStyle}" />
                    </Grid>
                    <hc:ScrollViewer Grid.Row="1"
                        Margin="4,5,8,8"
                        Orientation="Horizontal"
                        HorizontalScrollBarVisibility="Auto"
                        IsInertiaEnabled="True">
                        <StackPanel Margin="0,15" Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style BasedOn="{StaticResource GravatarCircleImg}" TargetType="hc:Gravatar">
                                    <Setter Property="Width" Value="33" />
                                    <Setter Property="Height" Value="33" />
                                </Style>
                                <Style BasedOn="{StaticResource ButtonCustom}" TargetType="Button">
                                    <Setter Property="Cursor" Value="Hand" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <hc:SimplePanel>
                                                    <hc:Gravatar Margin="5,3" Id="User2131a" />
                                                    <hc:Badge
                                                        BadgeMargin="0,-4,-2,0"
                                                        Style="{StaticResource BadgeDanger}"
                                                        BorderThickness="0"
                                                        FontSize="8"
                                                        Value="1" />
                                                </hc:SimplePanel>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </StackPanel.Resources>
                            <Button />
                            <Button />
                        </StackPanel>
                    </hc:ScrollViewer>
                    <ListView x:Name="listView1" Grid.Row="2"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Stretch"
                        ItemTemplate="{StaticResource myLVItemTemplate}"
                        Template="{StaticResource myLVTemplate}"
                        ItemContainerStyle="{StaticResource ItemContainerStyle}"
                        ItemsSource="{Binding Path=TestList}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ListView>
                </Grid>
                <!--<GridSplitter Grid.Column="1"
                    Width="2"
                    HorizontalAlignment="Center" />-->
                <hc:SimplePanel Grid.Column="2" Background="#F5F6F8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20" />
                            <RowDefinition Height="40" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Border Grid.Row="1"
                            BorderThickness="0,0,0,1"
                            BorderBrush="{StaticResource TMS_BorderBrush}" />
                        <hc:SimplePanel Grid.Row="1">
                            <TextBlock
                                Text="SuperGame团队"
                                Margin="20,0,0,0"
                                VerticalAlignment="Center"
                                Foreground="#000235"
                                FontWeight="SemiBold"
                                FontSize="16" />
                            <StackPanel
                                Margin="0,0,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <StackPanel.Resources>
                                    <Style BasedOn="{StaticResource FIconTextBtnStyle}" TargetType="Button">
                                        <Setter Property="Width" Value="40" />
                                        <Setter Property="Foreground" Value="#C8D5DD" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>

                                </StackPanel.Resources>
                                <Button Content="&#xe7bb;" FontSize="14" />
                                <Button Content="&#xe780;" FontSize="14" />
                            </StackPanel>
                        </hc:SimplePanel>
                        <uc:ChatBox Grid.Row="2" />
                        <!--<hc:SimplePanel Grid.Row="2" />
                        <hc:SimplePanel Grid.Row="3" Background="{StaticResource TMS_TransparencyRegionBrush}">
                            <Border
                                Margin="25,8"
                                Effect="{StaticResource EffectShadow3}"
                                CornerRadius="10"
                                Background="White">
                                <hc:SimplePanel>
                                    <TextBox
                                        Padding="10,0,0,0"
                                        hc:InfoElement.Placeholder="发送消息"
                                        Style="{StaticResource TextBoxExtend}"
                                        BorderThickness="0"
                                        Foreground="#2B2F36"
                                        FontSize="14" />
                                    <StackPanel
                                        Margin="0,0,10,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <StackPanel.Resources>
                                            <Style TargetType="Button" BasedOn="{StaticResource FIconTextBtnStyle}">
                                                <Setter Property="Width" Value="33" />
                                                <Setter Property="Cursor" Value="Hand" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                            </Style>
                                            <Style
                                                x:Key="SendBtnStyle"
                                                BasedOn="{StaticResource ButtonCustom}"
                                                TargetType="Button">
                                                <Setter Property="Cursor" Value="Hand" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate>
                                                            <Border x:Name="border"
                                                                Width="30"
                                                                Height="30"
                                                                CornerRadius="8"
                                                                Background="{StaticResource PrimaryBrush}">
                                                                <TextBlock
                                                                    Text="&#xe77f;"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    FontSize="15"
                                                                    Foreground="White"
                                                                    Style="{StaticResource FIconTextPlusBlockStyle}" />
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="RenderTransform">
                                                            <Setter.Value>
                                                                <ScaleTransform CenterX="15" CenterY="15" ScaleX="0.8" ScaleY="0.8" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Resources>
                                        <Button Content="&#xe758;" />
                                        <Button Content="&#xe792; " />
                                        <Button Style="{StaticResource SendBtnStyle}" />
                                    </StackPanel>
                                </hc:SimplePanel>
                            </Border>
                        </hc:SimplePanel>-->
                    </Grid>
                </hc:SimplePanel>
            </Grid>
        </Border>
    </Border>
</UserControl>
