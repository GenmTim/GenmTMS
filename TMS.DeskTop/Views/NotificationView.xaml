                                            RenderOptions.BitmapScalingMode="HighQuality"
                                            Source="/Resources/Images/Icon/FileType/PPT.png" />
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="需求问题.docx" />
                                            <TextBlock Text="上传成功" Foreground="{StaticResource SecondaryTextBrush}" />
                                        </StackPanel>
                                    </Grid>
                                </hc:SimplePanel>
                                <Border BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}" />
                                <hc:SimplePanel Grid.Row="1">
                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                        <StackPanel.Resources>
                                            <Style TargetType="Button" BasedOn="{StaticResource TextBtnStyle}">
                                                <Setter Property="FontSize" Value="12" />
                                                <Setter Property="Margin" Value="0,0,10,0" />
                                            </Style>
                                        </StackPanel.Resources>
                                        <Button Content="打开" />
                                        <Button Content="打开文件夹" />
                                        <Button Content="转发" />
                                    </StackPanel>
                                </hc:SimplePanel>
                            </Grid>
                        </hc:SimplePanel>-->
                        </Grid>
                        <!--<hc:SimplePanel>
                        <genm:DataDialog
                            Title="添加新联系人"
                            PositiveText="查找"
                            NegativeText="取消">
                            <TextBox
                                Text="测试"
                                Height="33"
                                hc:InfoElement.Placeholder="请输入手机号码"
                                Style="{StaticResource TextBoxExtend}" />
                        </genm:DataDialog>
                    </hc:SimplePanel>-->


                    </hc:SimplePanel>
                </Grid>
            </Border>
        </Border>
    </materialDesign:DialogHost>
</base:RegionManagerControl>
