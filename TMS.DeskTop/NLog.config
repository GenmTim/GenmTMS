<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd">
  <targets>

    <target xsi:type="File" name="debug" fileName="${basedir}/logs/${shortdate}_Debug.log"
            layout="${longdate} ${uppercase:${level}} ${message}"
            maxArchiveFiles="5" archiveAboveSize="20" archiveEvery="Day" />
    <target xsi:type="File" name="info" fileName="${basedir}/logs/${shortdate}_Info.log"
            layout="${longdate} ${uppercase:${level}} ${message}"
            maxArchiveFiles="5" archiveAboveSize="10" archiveEvery="Day" />
    <target xsi:type="File" name="error" fileName="${basedir}/logs/${shortdate}_Error.log"
            layout="${longdate} ${uppercase:${level}} ${message}"
            maxArchiveFiles="5" archiveAboveSize="10240" archiveEvery="Day" />
    <target xsi:type="File" name="warn" fileName="${basedir}/logs/${shortdate}_Warn.log"
            layout="${longdate} ${uppercase:${level}} ${message}"
            maxArchiveFiles="5" archiveAboveSize="10240" archiveEvery="Day" />
    <target xsi:type="File" name="trace" fileName="${basedir}/logs/${shortdate}_Trace.log"
            layout="${longdate} ${uppercase:${level}} ${message}"
            maxArchiveFiles="5" archiveAboveSize="10240" archiveEvery="Day" />
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="debug" />
    <logger name="*" minlevel="Info" writeTo="info" />
    <logger name="*" minlevel="Error" writeTo="error" />
    <logger name="*" minlevel="Warn" writeTo="warn" />
    <logger name="*" minlevel="Trace" writeTo="trace" />
    <logger name="*" minlevel="Off" writeTo="off" />
  </rules>
</nlog>